{
  "version": 2,
  "installCommand": "pip install -r requirements-prod.txt",
  "builds": [
    {
      "src": "portfolio/static/**",   
      "use": "@vercel/static"        
    },
    {
      "src": "wsgi.py",             
      "use": "@vercel/python",      
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",        
      "dest": "/portfolio/static/$1" 
    },
    {
       "src": "/(.*)",              
       "dest": "wsgi.py"           
    }
  ]
}